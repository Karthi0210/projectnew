<h1 align="center"> Listing All Books </h1>
<hr />
<% @books.each do |book| %>
  <div class="row">
  	<div class="col-md-2">
  		<section class="center">
  			
  		</section>
  	</div>
  	<div class="col-md-8 well">
  	 <h4> <%= book.name %> </h4>
     <p> <%= truncate(book.description , length: 150) %> </p>
     <p>
      <span class="quiet"><small>Created <%= time_ago_in_words(book.created_at) %> ago </small> </span>
     </p>
    </div>
  </div>


<% end %>