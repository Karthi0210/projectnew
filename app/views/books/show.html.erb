<%= render 'shared/page_title', title: @book.name %>

<div class="well col-md-8 col-md-offset-2">
  <h4 class="center description"><strong>Description: </strong></h4>
  <hr />
  <%= simple_format(@book.description) %>
  <hr />
  <% if @book.genres.any? %>
    <p>Genres: <%= render @book.genres %></p>
  <% end %>
  <hr />
  <div class="pull-right">
    <p class="center">
      <em>Authored by:</em>
    </p>
    <p class = "center">
      <%= link_to gravatar_for(@book.author), author_path(@book.author) %>
    </p>
    <p class = "center">
      <small> <%= @book.author.authorname.capitalize %></small>
      <!--<div class ="pull-right"><%= time_ago_in_words(@book.created_at) %> ago</div> -->
    </p>
    <p>
      <!--<small><%= @book.author.authorname %></small>-->
      <div class= "pull-right">authored: <%= time_ago_in_words(@book.created_at) %> ago
      </div>
    </p>
  </div>
  <div class="book-actions">
    <% if logged_in? && (current_author == @book.author || current_author.admin?) %>
      <%= link_to "Edit this book" , edit_book_path(@book) , class: "btn btn-xs btn-warning" %>
      <%= link_to "Delete this book", book_path(@book), method: :delete,
                                      data: { confirm: "Are you sure you want to delete?" },
                                      class: "btn btn-xs btn-danger" %>
    <% end %>
    <%= link_to "Return to books listing", books_path , class: "btn btn-xs btn-primary" %>
  </div>  
  </div>
</div>