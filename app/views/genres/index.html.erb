<%= render 'shared/page_title', title: "Available Genres" %>

<div align="center">
  <%= will_paginate %>
  <% @genres.each do |gen| %>
    <ul class="listing">
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">
          <li class="author-title"><%= link_to gen.name.capitalize,  genre_path(gen) %></li>
          <li><small><%= pluralize(gen.books.count, "book") if gen.books %></small></li>
          <% if logged_in? and current_author.admin?%>
             <li><%= link_to "Edit this Genre", edit_genre_path(gen)%></li>
          <% end%>
        </div>
      </div>
    </ul>      
  <% end %>
  <%= will_paginate %>
</div>