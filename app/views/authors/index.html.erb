<%= render 'shared/page_title', title: "Showing all Authors" %>

<div align="center">
  <% @authors.each do |author| %>
    <ul class="listing">
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">
          <li><%= link_to gravatar_for(author), author_path(author) %></li>
          <li class="author-title"><%= link_to author.authorname.capitalize, 
                                         author_path(author) %></li>
    <li><small><%= pluralize(author.books.count, "book") if author.books %>
            </small></li>
        </div>
      </div>
    </ul>      
  <% end %>
</div>