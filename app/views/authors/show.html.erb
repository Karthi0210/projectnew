<div class ="head"><%= render 'shared/page_title', title: "Author #{@author.authorname}'s profile" %></div>
<div class="row">
  <div class="col-md-4 col-md-offset-4 center">
    <%= gravatar_for @author, size: 150 %>
  </div>
</div>

<% if @author.books.count !=0 %> 
  <h4 align="center"><%= @author.authorname %>'s drabbles</h4>

  <div align="center">
    <%= will_paginate @author_books %>
  </div>

  <%= render 'books/book', obj: @author_books %>

  <div align="center">
    <%= will_paginate @author_books %>
  </div>
<% else %>
  <h4 align = "center">No drabbles yet </h4>
<% end %>